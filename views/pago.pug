
doctype html
html(lang="en")
head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Todo Música
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    link(href="../css/pago.css" rel="stylesheet")
body 
    div(id="cards") 
        img(src="http://icons.iconarchive.com/icons/designbolts/credit-card-payment/256/Visa-icon.png")
        img(src="http://icons.iconarchive.com/icons/designbolts/credit-card-payment/256/Master-Card-icon.png")
    form 
        div(id="form")
            label(for="cardholder") Nombre del titular *
            input(type="text" required)
            label(for="cardnumber") Número de tarjeta *
            input(type="text" required)
        
            div(id="fechaCVV")
                div(id="date")
                    label(for="date") Fecha de expedición *
                    div
                        input(type="text" placeholder="MM" required)
                        input(type="text" placeholder="YY" required)
                div(id="CVV")
                    label(for="CVV") CVV *
                    input(type="text" required)
            button(class="btn btn-dark") Finalizar
